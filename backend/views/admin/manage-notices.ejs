<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-bullhorn me-2"></i>Manage Notices
        </h2>
        <a href="/notices/admin/add" class="btn btn-warning btn-custom">
            <i class="fas fa-plus me-2"></i>Add New Notice
        </a>
    </div>
    
    <% if (notices.length === 0) { %>
        <div class="alert alert-info alert-custom text-center">
            <i class="fas fa-info-circle me-2"></i>
            No notices found. Start by adding your first notice!
        </div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Expires At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% notices.forEach(notice => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <% if (notice.image) { %>
                                        <i class="fas fa-image text-primary me-2"></i>
                                    <% } %>
                                    <div>
                                        <strong><%= notice.title %></strong>
                                        <br>
                                        <small class="text-muted">
                                            <%= notice.description.length > 60 ? notice.description.substring(0, 60) + '...' : notice.description %>
                                        </small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-<%= 
                                    notice.priority === 'urgent' ? 'danger' : 
                                    notice.priority === 'high' ? 'warning' : 
                                    notice.priority === 'medium' ? 'info' : 'secondary' 
                                %>">
                                    <%= notice.priority.toUpperCase() %>
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-<%= notice.isActive ? 'success' : 'secondary' %>">
                                    <%= notice.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td><%= notice.createdByName %></td>
                            <td>
                                <small><%= new Date(notice.createdAt).toLocaleDateString() %></small>
                            </td>
                            <td>
                                <small class="text-muted">
                                    <%= new Date(notice.expiresAt).toLocaleDateString() %>
                                </small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/notices/<%= notice._id %>" class="btn btn-outline-primary btn-sm" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="POST" action="/notices/admin/toggle/<%= notice._id %>" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-<%= notice.isActive ? 'warning' : 'success' %> btn-sm" 
                                                title="<%= notice.isActive ? 'Deactivate' : 'Activate' %>">
                                            <i class="fas fa-<%= notice.isActive ? 'pause' : 'play' %>"></i>
                                        </button>
                                    </form>
                                    <form method="POST" action="/notices/admin/delete/<%= notice._id %>" 
                                          onsubmit="return confirm('Are you sure you want to delete this notice?')" 
                                          style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
    
    <div class="mt-4">
        <div class="card border-light bg-light">
            <div class="card-body">
                <h6><i class="fas fa-info-circle me-2"></i>Notice Management Information</h6>
                <ul class="mb-0 small">
                    <li>Notices automatically expire and are deleted after 2 weeks</li>
                    <li>Only active notices are visible to students</li>
                    <li>Priority levels help organize notices by importance</li>
                    <li>Images make notices more engaging and visible</li>
                </ul>
            </div>
        </div>
    </div>
</div>