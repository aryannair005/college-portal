<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-plus-circle me-2"></i>Add Study Resource</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/add-resource" enctype="multipart/form-data" id="resourceForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="title" class="form-label">Resource Title *</label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="course" class="form-label">Course *</label>
                                <input type="text" class="form-control" id="course" name="course" 
                                       placeholder="e.g., BCA, MCA" required>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="semester" class="form-label">Semester *</label>
                                <select class="form-select" id="semester" name="semester" required>
                                    <option value="">Select Semester</option>
                                    <% for(let i = 1; i <= 8; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="subject" class="form-label">Subject *</label>
                                <input type="text" class="form-control" id="subject" name="subject" 
                                       placeholder="e.g., Mathematics, Physics" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="type" class="form-label">Resource Type *</label>
                            <select class="form-select" id="type" name="type" required onchange="toggleResourceType()">
                                <option value="">Select Type</option>
                                <option value="pdf">PDF File</option>
                                <option value="link">External Link</option>
                            </select>
                        </div>
                        
                        <div id="pdfSection" style="display: none;">
                            <div class="mb-3">
                                <label for="pdf" class="form-label">Upload PDF File</label>
                                <input type="file" class="form-control" id="pdf" name="pdf" accept=".pdf">
                            </div>
                        </div>
                        
                        <div id="linkSection" style="display: none;">
                            <div class="mb-3">
                                <label for="url" class="form-label">External URL</label>
                                <input type="url" class="form-control" id="url" name="url" 
                                       placeholder="https://example.com">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-custom w-100">
                                    <i class="fas fa-save me-2"></i>Add Resource
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a href="/admin" class="btn btn-outline-secondary btn-custom w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Admin
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>