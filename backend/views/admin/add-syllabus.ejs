<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-list-alt me-2"></i>Add Course Syllabus</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/add-syllabus" enctype="multipart/form-data" id="syllabusForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="title" class="form-label">Syllabus Title *</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       placeholder="e.g., Mathematics Syllabus 2025" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="course" class="form-label">Course *</label>
                                <input type="text" class="form-control" id="course" name="course" 
                                       placeholder="e.g., BCA, MCA" required>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="semester" class="form-label">Semester *</label>
                                <select class="form-select" id="semester" name="semester" required>
                                    <option value="">Select Semester</option>
                                    <% for(let i = 1; i <= 8; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="subject" class="form-label">Subject *</label>
                                <input type="text" class="form-control" id="subject" name="subject" 
                                       placeholder="e.g., Mathematics, Physics" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (Optional)</label>
                            <textarea class="form-control" id="description" name="description" rows="3" 
                                      placeholder="Brief description of the syllabus content..."></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="type" class="form-label">Syllabus Type *</label>
                            <select class="form-select" id="type" name="type" required onchange="toggleSyllabusType()">
                                <option value="">Select Type</option>
                                <option value="pdf">PDF File</option>
                                <option value="link">External Link</option>
                            </select>
                        </div>
                        
                        <div id="pdfSection" style="display: none;">
                            <div class="mb-3">
                                <label for="pdf" class="form-label">Upload Syllabus PDF</label>
                                <input type="file" class="form-control" id="pdf" name="pdf" accept=".pdf">
                                <div class="form-text">Only PDF files are allowed.</div>
                            </div>
                        </div>
                        
                        <div id="linkSection" style="display: none;">
                            <div class="mb-3">
                                <label for="url" class="form-label">Syllabus URL</label>
                                <input type="url" class="form-control" id="url" name="url" 
                                       placeholder="https://example.com/syllabus">
                                <div class="form-text">Link to online syllabus or document.</div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning btn-custom w-100">
                                    <i class="fas fa-save me-2"></i>Add Syllabus
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a href="/admin/manage-syllabus" class="btn btn-outline-secondary btn-custom w-100">
                                    <i class="fas fa-list me-2"></i>Manage Syllabus
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>