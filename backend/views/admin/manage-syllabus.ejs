<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-cog me-2"></i>Manage Syllabus
        </h2>
        <div>
            <a href="/admin/add-syllabus" class="btn btn-warning btn-custom me-2">
                <i class="fas fa-plus me-2"></i>Add New Syllabus
            </a>
            <a href="/admin" class="btn btn-outline-secondary btn-custom">
                <i class="fas fa-arrow-left me-2"></i>Back to Admin
            </a>
        </div>
    </div>
    
    <% if (syllabi.length === 0) { %>
        <div class="alert alert-info alert-custom text-center">
            <i class="fas fa-info-circle me-2"></i>
            No syllabus found. <a href="/admin/add-syllabus">Add your first syllabus!</a>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>All Syllabus (<%= syllabi.length %>)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Course</th>
                                <th>Semester</th>
                                <th>Subject</th>
                                <th>Type</th>
                                <th>Added Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% syllabi.forEach(syllabus => { %>
                                <tr>
                                    <td>
                                        <strong><%= syllabus.title %></strong>
                                        <% if (syllabus.description) { %>
                                            <br><small class="text-muted">
                                                <%= syllabus.description.length > 50 ? syllabus.description.substring(0, 50) + '...' : syllabus.description %>
                                            </small>
                                        <% } %>
                                    </td>
                                    <td><span class="badge bg-primary"><%= syllabus.course %></span></td>
                                    <td><span class="badge bg-secondary"><%= syllabus.semester %></span></td>
                                    <td><span class="badge bg-info"><%= syllabus.subject %></span></td>
                                    <td>
                                        <% if (syllabus.type === 'pdf') { %>
                                            <span class="badge bg-danger"><i class="fas fa-file-pdf me-1"></i>PDF</span>
                                        <% } else { %>
                                            <span class="badge bg-success"><i class="fas fa-link me-1"></i>Link</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small><%= new Date(syllabus.uploadedAt).toLocaleDateString() %></small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <% if (syllabus.type === 'pdf') { %>
                                                <a href="/viewer/syllabus/<%= syllabus.filename %>" 
                                                   class="btn btn-outline-success" title="View PDF">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/download/syllabus/<%= syllabus.filename %>" 
                                                   class="btn btn-outline-primary" title="Download">
                                                    <i class="fas fa-download"></i>
                                                </a>
                                            <% } else { %>
                                                <a href="<%= syllabus.url %>" target="_blank" 
                                                   class="btn btn-outline-primary" title="Open Link">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                            <% } %>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="deleteSyllabus('<%= syllabus._id %>', '<%= syllabus.title %>')" 
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this syllabus?</p>
                <p><strong id="syllabusTitle"></strong></p>
                <p class="text-danger"><small>This action cannot be undone!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>