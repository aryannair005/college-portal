<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-comments me-2"></i>Doubts & Discussion
        </h2>
        <a href="/doubts/add" class="btn btn-primary btn-custom">
            <i class="fas fa-plus me-2"></i>Ask Doubt
        </a>
    </div>
    
    <!-- Results Section -->
    <% if (doubts.length === 0) { %>
        <div class="alert alert-info alert-custom text-center">
            <i class="fas fa-info-circle me-2"></i>
            No doubts posted yet. <a href="/doubts/add">Post your first doubt!</a>
        </div>
    <% } else { %>
        <div class="row">
            <% doubts.forEach(doubt => { %>
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-1">
                                        <a href="/doubts/<%= doubt._id %>" class="text-decoration-none">
                                            <%= doubt.title %>
                                        </a>
                                    </h5>
                                    <div class="mb-2">
                                        <span class="badge bg-primary me-2"><%= doubt.course %></span>
                                        <span class="badge bg-secondary me-2">Sem <%= doubt.semester %></span>
                                        <span class="badge bg-info"><%= doubt.subject %></span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <small class="text-muted">
                                        By: <%= doubt.postedByName %><br>
                                        <%= new Date(doubt.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <%= doubt.description.length > 150 ? doubt.description.substring(0, 150) + '...' : doubt.description %>
                            </p>
                            <% if (doubt.image) { %>
                                <div class="mb-3">
                                    <img src="/download/doubt/<%= doubt.image %>" 
                                         alt="Doubt Image" 
                                         class="img-thumbnail" 
                                         style="max-height: 150px; max-width: 200px;">
                                </div>
                            <% } %>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">
                                    <i class="fas fa-comments me-1"></i>
                                    <%= doubt.replies.length %> replies
                                </span>
                                <div>
                                    <a href="/doubts/<%= doubt._id %>" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                    <% if (doubt.postedBy.toString() === user.id || user.role === 'admin') { %>
                                        <form method="POST" action="/doubts/<%= doubt._id %>/solved" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this doubt? This action cannot be undone.')">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i>Doubt Solved
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>