<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-book me-2"></i><%= resource.title %>
        </h2>
        <a href="/resources" class="btn btn-outline-secondary btn-custom">
            <i class="fas fa-arrow-left me-2"></i>Back to Resources
        </a>
    </div>
    
    <!-- Resource Details Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Resource Details
                    </h5>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge bg-light text-dark me-2"><%= resource.course %></span>
                    <span class="badge bg-light text-dark me-2">Sem <%= resource.semester %></span>
                    <span class="badge bg-light text-dark"><%= resource.subject %></span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6><strong>Resource Type:</strong></h6>
                    <% if (resource.type === 'pdf') { %>
                        <p><span class="badge bg-danger"><i class="fas fa-file-pdf me-1"></i>PDF File</span></p>
                        <div class="mt-3">
                            <a href="/viewer/resource/<%= resource.filename %>" 
                               class="btn btn-success btn-custom me-2">
                                <i class="fas fa-eye me-2"></i>View PDF
                            </a>
                            <a href="/download/resource/<%= resource.filename %>" 
                               class="btn btn-outline-success btn-custom">
                                <i class="fas fa-download me-2"></i>Download
                            </a>
                        </div>
                    <% } else { %>
                        <p><span class="badge bg-success"><i class="fas fa-link me-1"></i>External Link</span></p>
                        <div class="mt-3">
                            <a href="<%= resource.url %>" target="_blank" 
                               class="btn btn-primary btn-custom">
                                <i class="fas fa-external-link-alt me-2"></i>Open Link
                            </a>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-6">
                    <h6><strong>Added Date:</strong></h6>
                    <p><%= new Date(resource.uploadedAt).toLocaleDateString() %></p>
                    
                    <% if (resource.youtubeLinks && resource.youtubeLinks.length > 0) { %>
                        <h6><strong>Video Resources:</strong></h6>
                        <p>
                            <span class="badge bg-danger">
                                <i class="fab fa-youtube me-1"></i>
                                <%= resource.youtubeLinks.length %> YouTube Videos
                            </span>
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- YouTube Links Section -->
    <% if (resource.youtubeLinks && resource.youtubeLinks.length > 0) { %>
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fab fa-youtube me-2"></i>YouTube Video Resources
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <% resource.youtubeLinks.forEach((link, index) => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 border-danger">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fab fa-youtube text-danger me-2"></i>
                                        <%= link.topicName %>
                                    </h6>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            Added: <%= new Date(link.addedAt).toLocaleDateString() %>
                                        </small>
                                    </p>
                                    <div class="d-grid">
                                        <a href="<%= link.url %>" target="_blank" 
                                           class="btn btn-danger btn-custom">
                                            <i class="fas fa-play me-2"></i>Watch Video
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                <!-- All Videos Button -->
                <div class="text-center mt-3">
                    <button type="button" class="btn btn-outline-danger btn-custom" 
                            onclick="openAllVideos()">
                        <i class="fas fa-play-circle me-2"></i>Open All Videos in New Tabs
                    </button>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fab fa-youtube me-2"></i>YouTube Video Resources
                </h5>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    No YouTube videos have been added to this resource yet.
                </div>
            </div>
        </div>
    <% } %>
    
    <!-- Related Actions -->
    <div class="card mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-link me-2"></i>Related Actions
            </h5>
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-3 mb-3">
                    <a href="/resources?course=<%= resource.course %>" 
                       class="btn btn-outline-primary btn-custom w-100">
                        <i class="fas fa-search me-2"></i>More from <%= resource.course %>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/resources?semester=<%= resource.semester %>" 
                       class="btn btn-outline-secondary btn-custom w-100">
                        <i class="fas fa-filter me-2"></i>Semester <%= resource.semester %>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/resources?subject=<%= resource.subject %>" 
                       class="btn btn-outline-info btn-custom w-100">
                        <i class="fas fa-book me-2"></i><%= resource.subject %>
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/doubts/add" class="btn btn-outline-warning btn-custom w-100">
                        <i class="fas fa-question-circle me-2"></i>Ask Doubt
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function openAllVideos() {
    <% if (resource.youtubeLinks && resource.youtubeLinks.length > 0) { %>
        const videoUrls = [
            <% resource.youtubeLinks.forEach((link, index) => { %>
                '<%= link.url %>'<%= index < resource.youtubeLinks.length - 1 ? ',' : '' %>
            <% }) %>
        ];
        
        if (confirm(`This will open <%= resource.youtubeLinks.length %> videos in new tabs. Continue?`)) {
            videoUrls.forEach(url => {
                window.open(url, '_blank');
            });
        }
    <% } %>
}

// Extract YouTube video ID and create thumbnail
function getYouTubeThumbnail(url) {
    const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
    const match = url.match(regExp);
    return (match && match[2].length === 11) ? match[2] : null;
}

// Add thumbnails to video cards (optional enhancement)
document.addEventListener('DOMContentLoaded', function() {
    <% if (resource.youtubeLinks && resource.youtubeLinks.length > 0) { %>
        <% resource.youtubeLinks.forEach((link, index) => { %>
            const videoId<%= index %> = getYouTubeThumbnail('<%= link.url %>');
            if (videoId<%= index %>) {
                const thumbnailUrl = `https://img.youtube.com/vi/${videoId<%= index %>}/mqdefault.jpg`;
                // You can add thumbnail images here if needed
            }
        <% }) %>
    <% } %>
});
</script>

<style>
.card {
    transition: transform 0.2s;
}

.card:hover {
    transform: translateY(-2px);
}

.border-danger {
    border-color: #dc3545 !important;
}

.btn-custom {
    border-radius: 25px;
}

/* YouTube card specific styling */
.card.border-danger .card-body {
    background: linear-gradient(135deg, #fff 0%, #ffe6e6 100%);
}

.card.border-danger:hover {
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
}

/* Responsive design */
@media (max-width: 768px) {
    .card-header .row {
        text-align: center;
    }
    
    .card-header .col-md-4 {
        margin-top: 10px;
    }
}
</style>