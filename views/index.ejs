<div class="hero-section bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 mb-4">
            <i class="fas fa-graduation-cap me-3"></i>Welcome to College Portal
        </h1>
        <p class="lead mb-4">Your one-stop destination for study resources and previous year question papers</p>
        <% if (!user) { %>
            <a href="/register" class="btn btn-light btn-lg btn-custom me-3">
                <i class="fas fa-user-plus me-2"></i>Get Started
            </a>
            <a href="/login" class="btn btn-outline-light btn-lg btn-custom">
                <i class="fas fa-sign-in-alt me-2"></i>Login
            </a>
        <% } else { %>
            <a href="/dashboard" class="btn btn-light btn-lg btn-custom">
                <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
            </a>
        <% } %>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-book text-primary fa-3x mb-3"></i>
                    <h5 class="card-title">Study Resources</h5>
                    <p class="card-text">Access a vast collection of study materials, PDFs, and helpful links organized by course, semester, and subject.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-question-circle text-success fa-3x mb-3"></i>
                    <h5 class="card-title">Previous Year Questions</h5>
                    <p class="card-text">Browse and download previous year question papers to ace your exams with proper preparation.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-filter text-info fa-3x mb-3"></i>
                    <h5 class="card-title">Smart Filtering</h5>
                    <p class="card-text">Find exactly what you need with our advanced filtering system by course, semester, and subject.</p>
                </div>
            </div>
        </div>
    </div>
</div>