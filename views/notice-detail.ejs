<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/notice.css">
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-<%= 
                        notice.priority === 'urgent' ? 'danger' : 
                        notice.priority === 'high' ? 'warning' : 
                        notice.priority === 'medium' ? 'info' : 'light' 
                    %> text-<%= notice.priority === 'urgent' || notice.priority === 'high' ? 'white' : 'dark' %>">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-bullhorn me-2"></i>
                                <%= notice.title %>
                            </h4>
                            <span class="badge bg-<%= 
                                notice.priority === 'urgent' ? 'light text-danger' : 
                                notice.priority === 'high' ? 'light text-warning' : 
                                notice.priority === 'medium' ? 'light text-info' : 'secondary' 
                            %>">
                                <%= notice.priority.toUpperCase() %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <!-- Notice Image -->
                        <% if (notice.image) { %>
                            <div class="text-center mb-4">
                                <img src="/download/notice/<%= notice.image %>" 
                                    class="img-fluid rounded shadow" 
                                    alt="Notice Image"
                                    style="max-height: 400px; cursor: pointer;"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#imageModal">
                                <div class="form-text mt-2">
                                    <i class="fas fa-search-plus me-1"></i>Click image to view in full size
                                </div>
                            </div>
                        <% } %>
                        
                        <!-- Notice Description -->
                        <div class="notice-content">
                            <h5><i class="fas fa-info-circle me-2"></i>Details</h5>
                            <div class="content-text">
                                <%- notice.description.replace(/\n/g, '<br>') %>
                            </div>
                        </div>
                        
                        <!-- Notice Metadata -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="notice-meta">
                                    <h6><i class="fas fa-user me-2"></i>Posted By</h6>
                                    <p class="text-muted"><%= notice.createdByName %></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="notice-meta">
                                    <h6><i class="fas fa-calendar me-2"></i>Posted On</h6>
                                    <p class="text-muted">
                                        <%= new Date(notice.createdAt).toLocaleDateString('en-US', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Expiration Info -->
                        <div class="alert alert-light border mt-4" role="alert">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <i class="fas fa-clock me-2"></i>
                                    <strong>This notice expires on:</strong> 
                                    <%= new Date(notice.expiresAt).toLocaleDateString('en-US', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </div>
                                <div class="col-md-4 text-end">
                                    <% 
                                        const daysLeft = Math.ceil((new Date(notice.expiresAt) - new Date()) / (1000 * 60 * 60 * 24));
                                    %>
                                    <span class="badge bg-<%= daysLeft <= 3 ? 'danger' : daysLeft <= 7 ? 'warning' : 'success' %> fs-6">
                                        <%= daysLeft %> days left
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/notices" class="btn btn-outline-secondary btn-custom">
                                <i class="fas fa-arrow-left me-2"></i>Back to Notice Board
                            </a>
                            
                            <% if (user.role === 'admin') { %>
                                <div class="btn-group">
                                    <form method="POST" action="/notices/admin/toggle/<%= notice._id %>" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-<%= notice.isActive ? 'warning' : 'success' %> btn-sm">
                                            <i class="fas fa-<%= notice.isActive ? 'pause' : 'play' %> me-1"></i>
                                            <%= notice.isActive ? 'Deactivate' : 'Activate' %>
                                        </button>
                                    </form>
                                    <form method="POST" action="/notices/admin/delete/<%= notice._id %>" 
                                        onsubmit="return confirm('Are you sure you want to delete this notice?')" 
                                        style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Modal -->
    <% if (notice.image) { %>
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">
                        <i class="fas fa-image me-2"></i>Notice Image
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="/download/notice/<%= notice.image %>" 
                        class="img-fluid" 
                        alt="Notice Image Full Size">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="/download/notice/<%= notice.image %>" 
                    class="btn btn-primary" 
                    download>
                        <i class="fas fa-download me-1"></i>Download Image
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>

</body>
</html>