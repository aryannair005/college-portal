<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container my-4">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-2"><%= doubt.title %></h4>
                        <div>
                            <span class="badge bg-primary me-2"><%= doubt.course %></span>
                            <span class="badge bg-secondary me-2">Sem <%= doubt.semester %></span>
                            <span class="badge bg-info"><%= doubt.subject %></span>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="/doubts" class="btn btn-outline-secondary btn-sm me-2">
                            <i class="fas fa-arrow-left me-1"></i>Back
                        </a>
                        <% if (doubt.postedBy.toString() === user.id || user.role === 'admin') { %>
                            <form method="POST" action="/doubts/<%= doubt._id %>/solved" class="d-inline"
                                onsubmit="return confirm('Are you sure you want to delete this doubt? This action cannot be undone.')">
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fas fa-check me-1"></i>Doubt Solved
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Posted by:</strong> <%= doubt.postedByName %> â€¢ 
                    <small class="text-muted"><%= new Date(doubt.createdAt).toLocaleString() %></small>
                </div>
                
                <div class="mb-4">
                    <h6>Description:</h6>
                    <p class="lead"><%= doubt.description %></p>
                    
                    <% if (doubt.image) { %>
                        <div class="text-center my-3">
                            <img src="/download/doubt/<%= doubt.image %>" 
                                alt="Doubt Image" 
                                class="img-fluid rounded shadow" 
                                style="max-height: 400px;">
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Replies Section -->
        <div class="card mt-4">
            <div class="card-header">
                <h5><i class="fas fa-comments me-2"></i>Replies (<%= doubt.replies.length %>)</h5>
            </div>
            <div class="card-body">
                <!-- Reply Form -->
                <form method="POST" action="/doubts/<%= doubt._id %>/reply" class="mb-4">
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Reply</label>
                        <textarea class="form-control" id="message" name="message" rows="3" 
                                placeholder="Type your reply here..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success btn-custom">
                        <i class="fas fa-reply me-2"></i>Post Reply
                    </button>
                </form>
                
                <!-- Existing Replies -->
                <% if (doubt.replies.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No replies yet. Be the first to help!
                    </div>
                <% } else { %>
                    <div class="replies-section">
                        <% doubt.replies.forEach((reply, index) => { %>
                            <div class="reply-item mb-3 p-3 bg-light rounded">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <strong>
                                        <i class="fas fa-user-circle me-1"></i>
                                        <%= reply.repliedByName %>
                                    </strong>
                                    <small class="text-muted">
                                        <%= new Date(reply.repliedAt).toLocaleString() %>
                                    </small>
                                </div>
                                <p class="mb-0"><%= reply.message %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>