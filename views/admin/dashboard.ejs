<div class="container my-5">
    <h2 class="mb-4">
        <i class="fas fa-crown me-2"></i>Admin Dashboard
    </h2>
    
    <div class="row">
        <!-- Notice Management -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-bullhorn text-warning fa-3x mb-3"></i>
                    <h5 class="card-title">Notice Board</h5>
                    <p class="card-text">Manage announcements and notices for students.</p>
                    <div class="d-grid gap-2">
                        <a href="/admin/notices" class="btn btn-warning btn-custom">
                            <i class="fas fa-cog me-2"></i>Manage Notices
                        </a>
                        <a href="/admin/add-notice" class="btn btn-outline-warning btn-custom">
                            <i class="fas fa-plus me-2"></i>Add Notice
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Resource Management -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-book text-primary fa-3x mb-3"></i>
                    <h5 class="card-title">Resources</h5>
                    <p class="card-text">Manage study materials, PDFs, and educational links.</p>
                    <div class="d-grid gap-2">
                        <a href="/admin/manage-resources" class="btn btn-primary btn-custom">
                            <i class="fas fa-cog me-2"></i>Manage Resources
                        </a>
                        <a href="/admin/add-resource" class="btn btn-outline-primary btn-custom">
                            <i class="fas fa-plus me-2"></i>Add Resource
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- PYQ Management -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-question-circle text-success fa-3x mb-3"></i>
                    <h5 class="card-title">PYQs</h5>
                    <p class="card-text">Upload and manage previous year question papers.</p>
                    <a href="/admin/add-pyq" class="btn btn-success btn-custom">
                        <i class="fas fa-plus me-2"></i>Add PYQ
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Syllabus Management -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-list-alt text-info fa-3x mb-3"></i>
                    <h5 class="card-title">Syllabus</h5>
                    <p class="card-text">Manage course syllabus and curriculum information.</p>
                    <div class="d-grid gap-2">
                        <a href="/admin/manage-syllabus" class="btn btn-info btn-custom">
                            <i class="fas fa-cog me-2"></i>Manage Syllabus
                        </a>
                        <a href="/admin/add-syllabus" class="btn btn-outline-info btn-custom">
                            <i class="fas fa-plus me-2"></i>Add Syllabus
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Calendar Management -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt text-danger fa-3x mb-3"></i>
                    <h5 class="card-title">Academic Calendar</h5>
                    <p class="card-text">Manage academic events, holidays, and important dates.</p>
                    <div class="d-grid gap-2">
                        <a href="/admin/calendar" class="btn btn-danger btn-custom">
                            <i class="fas fa-cog me-2"></i>Manage Calendar
                        </a>
                        <a href="/admin/calendar/add" class="btn btn-outline-danger btn-custom">
                            <i class="fas fa-plus me-2"></i>Add Event
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Stats Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-light bg-light">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <a href="/admin/add-notice" class="btn btn-outline-warning btn-custom w-100">
                                <i class="fas fa-bullhorn me-2"></i>Post Notice
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/admin/add-resource" class="btn btn-outline-primary btn-custom w-100">
                                <i class="fas fa-upload me-2"></i>Upload Resource
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/admin/add-pyq" class="btn btn-outline-success btn-custom w-100">
                                <i class="fas fa-file-upload me-2"></i>Upload PYQ
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/admin/add-syllabus" class="btn btn-outline-info btn-custom w-100">
                                <i class="fas fa-plus-circle me-2"></i>Add Syllabus
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/admin/calendar/add" class="btn btn-outline-danger btn-custom w-100">
                                <i class="fas fa-calendar-plus me-2"></i>Add Event
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- View Portal as Student -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i>Student View</h5>
                </div>
                <div class="card-body">
                    <p>View the portal from a student's perspective to see how your content appears.</p>
                    <div class="row">
                        <div class="col-md-2 mb-2">
                            <a href="/dashboard" class="btn btn-outline-info btn-sm w-100">Dashboard</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/notices" class="btn btn-outline-warning btn-sm w-100">Notices</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/resources" class="btn btn-outline-primary btn-sm w-100">Resources</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/pyqs" class="btn btn-outline-success btn-sm w-100">PYQs</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/syllabus" class="btn btn-outline-info btn-sm w-100">Syllabus</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/doubts" class="btn btn-outline-secondary btn-sm w-100">Doubts</a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="/calendar" class="btn btn-outline-danger btn-sm w-100">Calendar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>