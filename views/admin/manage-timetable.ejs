<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>ðŸ“… Manage Timetables</h2>
                <a href="/admin/timetable/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Timetable
                </a>
            </div>

            <% if (timetables.length === 0) { %>
                <div class="alert alert-info">
                    <h5>No Timetables Found</h5>
                    <p>No timetables have been created yet. <a href="/admin/timetable/add">Create the first timetable</a>.</p>
                </div>
            <% } else { %>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Course & Semester</th>
                                        <th>Section</th>
                                        <th>Academic Year</th>
                                        <th>Effective Period</th>
                                        <th>Status</th>
                                        <th>Created By</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% timetables.forEach(timetable => { %>
                                        <tr>
                                            <td>
                                                <strong><%= timetable.course %></strong><br>
                                                <small class="text-muted">Semester <%= timetable.semester %></small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary"><%= timetable.section %></span>
                                            </td>
                                            <td><%= timetable.academicYear %></td>
                                            <td>
                                                <small>
                                                    From: <%= timetable.effectiveFrom.toDateString() %><br>
                                                    <% if (timetable.effectiveTo) { %>
                                                        To: <%= timetable.effectiveTo.toDateString() %>
                                                    <% } else { %>
                                                        <em>Ongoing</em>
                                                    <% } %>
                                                </small>
                                            </td>
                                            <td>
                                                <% if (timetable.isActive) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <small>
                                                    <%= timetable.createdByName || 'Unknown' %><br>
                                                    <span class="text-muted"><%= timetable.createdAt.toDateString() %></span>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <!-- View Button -->
                                                    <a href="/timetable/<%= timetable._id %>" class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    <!-- Edit Button -->
                                                    <a href="/admin/timetable/edit/<%= timetable._id %>" class="btn btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <!-- Copy Button -->
                                                    <form method="POST" action="/admin/timetable/copy/<%= timetable._id %>" style="display: inline;">
                                                        <button type="submit" class="btn btn-outline-secondary" title="Copy Timetable" onclick="return confirm('Are you sure you want to copy this timetable?')">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </form>
                                                    
                                                    <!-- Toggle Status Button -->
                                                    <form method="POST" action="/admin/timetable/toggle/<%= timetable._id %>" style="display: inline;">
                                                        <button type="submit" class="btn btn-outline-<%= timetable.isActive ? 'warning' : 'success' %>" 
                                                                title="<%= timetable.isActive ? 'Deactivate' : 'Activate' %>"
                                                                onclick="return confirm('Are you sure you want to <%= timetable.isActive ? 'deactivate' : 'activate' %> this timetable?')">
                                                            <i class="fas fa-<%= timetable.isActive ? 'pause' : 'play' %>"></i>
                                                        </button>
                                                    </form>
                                                    
                                                    <!-- Delete Button -->
                                                    <form method="POST" action="/admin/timetable/delete/<%= timetable._id %>" style="display: inline;">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete" 
                                                                onclick="return confirm('Are you sure? This will permanently delete the timetable.')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h5><%= timetables.length %></h5>
                                <p class="mb-0">Total Timetables</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h5><%= timetables.filter(t => t.isActive).length %></h5>
                                <p class="mb-0">Active Timetables</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <h5><%= [...new Set(timetables.map(t => t.course))].length %></h5>
                                <p class="mb-0">Unique Courses</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <h5><%= [...new Set(timetables.map(t => t.academicYear))].length %></h5>
                                <p class="mb-0">Academic Years</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.btn-group-sm .btn {
    padding: 0.25rem 0.4rem;
    font-size: 0.75rem;
}

.table td {
    vertical-align: middle;
}

.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.badge {
    font-size: 0.75em;
}
</style>