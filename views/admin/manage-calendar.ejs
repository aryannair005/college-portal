<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-calendar-alt me-2"></i>Manage Academic Calendar
        </h2>
        <a href="/calendar/admin/add" class="btn btn-warning btn-custom">
            <i class="fas fa-plus me-2"></i>Add New Event
        </a>
    </div>
    
    <% if (events.length === 0) { %>
        <div class="alert alert-info alert-custom text-center">
            <i class="fas fa-info-circle me-2"></i>
            No calendar events found. Start by adding your first event!
        </div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Event Title</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-day text-<%= 
                                        event.eventType === 'holiday' ? 'success' : 
                                        event.eventType === 'exam' ? 'danger' : 
                                        event.eventType === 'assignment' ? 'warning' : 
                                        event.eventType === 'meeting' ? 'info' : 
                                        event.eventType === 'seminar' ? 'primary' : 
                                        event.eventType === 'workshop' ? 'secondary' : 'dark' 
                                    %> me-2"></i>
                                    <div>
                                        <strong><%= event.title %></strong>
                                        <br>
                                        <small class="text-muted">
                                            <%= event.description.length > 60 ? event.description.substring(0, 60) + '...' : event.description %>
                                        </small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-<%= 
                                    event.eventType === 'holiday' ? 'success' : 
                                    event.eventType === 'exam' ? 'danger' : 
                                    event.eventType === 'assignment' ? 'warning' : 
                                    event.eventType === 'meeting' ? 'info' : 
                                    event.eventType === 'seminar' ? 'primary' : 
                                    event.eventType === 'workshop' ? 'secondary' : 'dark' 
                                %>">
                                    <%= event.eventType.charAt(0).toUpperCase() + event.eventType.slice(1) %>
                                </span>
                            </td>
                            <td>
                                <div>
                                    <strong><%= new Date(event.eventDate).toLocaleDateString() %></strong>
                                    <br>
                                    <small class="text-muted">
                                        <%= new Date(event.eventDate).toLocaleDateString('en-US', { weekday: 'long' }) %>
                                    </small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-<%= event.isActive ? 'success' : 'secondary' %>">
                                    <%= event.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td><%= event.createdByName %></td>
                            <td>
                                <small><%= new Date(event.createdAt).toLocaleDateString() %></small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/calendar/admin/edit/<%= event._id %>" class="btn btn-outline-primary btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="POST" action="/calendar/admin/toggle/<%= event._id %>" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-<%= event.isActive ? 'warning' : 'success' %> btn-sm" 
                                                title="<%= event.isActive ? 'Deactivate' : 'Activate' %>">
                                            <i class="fas fa-<%= event.isActive ? 'pause' : 'play' %>"></i>
                                        </button>
                                    </form>
                                    <form method="POST" action="/calendar/admin/delete/<%= event._id %>" 
                                          onsubmit="return confirm('Are you sure you want to delete this calendar event?')" 
                                          style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
    
    <div class="mt-4">
        <div class="card border-light bg-light">
            <div class="card-body">
                <h6><i class="fas fa-info-circle me-2"></i>Calendar Management Information</h6>
                <ul class="mb-0 small text-muted">
                    <li>Events are automatically sorted by date (newest first)</li>
                    <li>You can activate/deactivate events without deleting them</li>
                    <li>Only active events are visible to students</li>
                    <li>Event types help students quickly identify different types of activities</li>
                    <li>Use the edit function to update event details</li>
                </ul>
            </div>
        </div>
    </div>
</div> 