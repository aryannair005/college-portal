<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-comments me-2"></i>Manage Feedback
        </h2>
        <div>
            <a href="/feedback/admin/export" class="btn btn-success me-2">
                <i class="fas fa-download me-2"></i>Export CSV
            </a>
            <a href="/admin" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Admin
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h3 class="card-title text-warning"><%= statusStats.pending %></h3>
                    <p class="card-text">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="fas fa-eye fa-2x text-info mb-2"></i>
                    <h3 class="card-title text-info"><%= statusStats.reviewed %></h3>
                    <p class="card-text">Reviewed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h3 class="card-title text-success"><%= statusStats.resolved %></h3>
                    <p class="card-text">Resolved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <i class="fas fa-archive fa-2x text-secondary mb-2"></i>
                    <h3 class="card-title text-secondary"><%= statusStats.closed %></h3>
                    <p class="card-text">Closed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter me-2"></i>Filter Feedback
            </h5>
        </div>
        <div class="card-body">
            <form method="GET" action="/feedback/admin/manage">
                <div class="row">
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All Status</option>
                            <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="reviewed" <%= filters.status === 'reviewed' ? 'selected' : '' %>>Reviewed</option>
                            <option value="resolved" <%= filters.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                            <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>>Closed</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="all" <%= filters.category === 'all' ? 'selected' : '' %>>All Categories</option>
                            <option value="general" <%= filters.category === 'general' ? 'selected' : '' %>>General</option>
                            <option value="technical" <%= filters.category === 'technical' ? 'selected' : '' %>>Technical</option>
                            <option value="suggestion" <%= filters.category === 'suggestion' ? 'selected' : '' %>>Suggestion</option>
                            <option value="complaint" <%= filters.category === 'complaint' ? 'selected' : '' %>>Complaint</option>
                            <option value="feature-request" <%= filters.category === 'feature-request' ? 'selected' : '' %>>Feature Request</option>
                            <option value="other" <%= filters.category === 'other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="priority" class="form-label">Priority</label>
                        <select class="form-select" id="priority" name="priority">
                            <option value="all" <%= filters.priority === 'all' ? 'selected' : '' %>>All Priorities</option>
                            <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>>Low</option>
                            <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                            <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>>High</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Filter
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Feedback Table -->
    <% if (feedbacks.length === 0) { %>
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                <h4 class="text-muted">No Feedback Found</h4>
                <p class="text-muted">No feedback matches your current filters.</p>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Submitted By</th>
                            <th>Date</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% feedbacks.forEach(feedback => { %>
                            <tr>
                                <td>
                                    <strong><%= feedback.title %></strong>
                                    <% if (feedback.isAnonymous) { %>
                                        <span class="badge bg-secondary ms-2">Anonymous</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        <%= feedback.category.charAt(0).toUpperCase() + feedback.category.slice(1).replace('-', ' ') %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-<%= feedback.priority === 'high' ? 'danger' : 
                                        feedback.priority === 'medium' ? 'warning' : 'secondary' %>">
                                        <%= feedback.priority.charAt(0).toUpperCase() + feedback.priority.slice(1) %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-<%= feedback.status === 'pending' ? 'warning' : 
                                        feedback.status === 'reviewed' ? 'info' : 
                                        feedback.status === 'resolved' ? 'success' : 'secondary' %>">
                                        <%= feedback.status.charAt(0).toUpperCase() + feedback.status.slice(1) %>
                                    </span>
                                </td>
                                <td>
                                    <%= feedback.isAnonymous ? 'Anonymous' : feedback.submittedByName %>
                                </td>
                                <td>
                                    <small><%= feedback.formattedDate %></small>
                                </td>
                                <td>
                                    <% if (feedback.rating) { %>
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star <%= i <= feedback.rating ? 'text-warning' : 'text-muted' %> small"></i>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#feedbackModal<%= feedback._id %>">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-success" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#statusModal<%= feedback._id %>">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <form method="POST" action="/feedback/admin/delete/<%= feedback._id %>" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this feedback?')">
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <nav aria-label="Feedback pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <% if (hasPrevPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="/feedback/admin/manage?page=<%= prevPage %>&status=<%= filters.status %>&category=<%= filters.category %>&priority=<%= filters.priority %>">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    <% } %>
                    
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/feedback/admin/manage?page=<%= i %>&status=<%= filters.status %>&category=<%= filters.category %>&priority=<%= filters.priority %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    
                    <% if (hasNextPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="/feedback/admin/manage?page=<%= nextPage %>&status=<%= filters.status %>&category=<%= filters.category %>&priority=<%= filters.priority %>">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } %>

    <!-- Modals for viewing and updating feedback -->
    <% feedbacks.forEach(feedback => { %>
        <!-- View Feedback Modal -->
        <div class="modal fade" id="feedbackModal<%= feedback._id %>" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-comments me-2"></i>
                            <%= feedback.title %>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Category:</strong> 
                                <span class="badge bg-light text-dark">
                                    <%= feedback.category.charAt(0).toUpperCase() + feedback.category.slice(1).replace('-', ' ') %>
                                </span>
                            </div>
                            <div class="col-md-6">
                                <strong>Priority:</strong> 
                                <span class="badge bg-<%= feedback.priority === 'high' ? 'danger' : 
                                    feedback.priority === 'medium' ? 'warning' : 'secondary' %>">
                                    <%= feedback.priority.charAt(0).toUpperCase() + feedback.priority.slice(1) %>
                                </span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Submitted by:</strong> <%= feedback.isAnonymous ? 'Anonymous' : feedback.submittedByName %>
                            </div>
                            <div class="col-md-6">
                                <strong>Date:</strong> <%= feedback.formattedDate %>
                            </div>
                        </div>
                        <% if (feedback.rating) { %>
                            <div class="mb-3">
                                <strong>Rating:</strong>
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= feedback.rating ? 'text-warning' : 'text-muted' %>"></i>
                                <% } %>
                                (<%= feedback.rating %>/5)
                            </div>
                        <% } %>
                        <div class="mb-3">
                            <strong>Message:</strong>
                            <div class="border rounded p-3 mt-2">
                                <%= feedback.message %>
                            </div>
                        </div>
                        <% if (feedback.adminResponse && feedback.adminResponse.message) { %>
                            <div class="alert alert-info">
                                <strong>Admin Response:</strong>
                                <p class="mb-1 mt-2"><%= feedback.adminResponse.message %></p>
                                <small class="text-muted">
                                    Responded on <%= new Date(feedback.adminResponse.respondedAt).toLocaleDateString() %>
                                </small>
                            </div>
                        <% } %>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Update Status Modal -->
        <div class="modal fade" id="statusModal<%= feedback._id %>" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-edit me-2"></i>Update Feedback Status
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form method="POST" action="/feedback/admin/update-status/<%= feedback._id %>">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="status<%= feedback._id %>" class="form-label">Status</label>
                                <select class="form-select" id="status<%= feedback._id %>" name="status" required>
                                    <option value="pending" <%= feedback.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="reviewed" <%= feedback.status === 'reviewed' ? 'selected' : '' %>>Reviewed</option>
                                    <option value="resolved" <%= feedback.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                    <option value="closed" <%= feedback.status === 'closed' ? 'selected' : '' %>>Closed</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="adminResponse<%= feedback._id %>" class="form-label">Admin Response (Optional)</label>
                                <textarea class="form-control" id="adminResponse<%= feedback._id %>" name="adminResponse" 
                                          rows="4" placeholder="Provide response to the user..."><%= feedback.adminResponse && feedback.adminResponse.message ? feedback.adminResponse.message : '' %></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Update Status</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<style>
.card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

.table th {
    border-top: none;
    font-weight: 600;
}

.table td {
    vertical-align: middle;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
}

.btn {
    transition: all 0.2s ease;
}

.btn:hover {
    transform: translateY(-1px);
}

@media (max-width: 768px) {
    .table-responsive {
        font-size: 0.875rem;
    }
    
    .btn-group-sm .btn {
        padding: 0.2rem 0.3rem;
    }
}
</style>