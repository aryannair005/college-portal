<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-question-circle me-2"></i>Add Previous Year Question Paper</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/add-pyq" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="course" class="form-label">Course *</label>
                                <input type="text" class="form-control" id="course" name="course" 
                                       placeholder="e.g., BCA, MCA" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="semester" class="form-label">Semester *</label>
                                <select class="form-select" id="semester" name="semester" required>
                                    <option value="">Select Semester</option>
                                    <% for(let i = 1; i <= 8; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject *</label>
                            <input type="text" class="form-control" id="subject" name="subject" 
                                   placeholder="e.g., Mathematics, Physics" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="pyq" class="form-label">Upload PYQ PDF File *</label>
                            <input type="file" class="form-control" id="pyq" name="pyq" 
                                   accept=".pdf" required>
                            <div class="form-text">Only PDF files are allowed.</div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-custom w-100">
                                    <i class="fas fa-save me-2"></i>Add PYQ
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a href="/admin" class="btn btn-outline-secondary btn-custom w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Admin
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>